<Page
    x:Class="HelloWorld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWorld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="Counter" HorizontalAlignment="Left" Margin="10,10,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Add One" HorizontalAlignment="Left" VerticalAlignment="Top" Click="AddOne" Margin="10,35,0,0"/>
        <Button Content="Minus One" HorizontalAlignment="Left" VerticalAlignment="Top" Click="MinusOne" Margin="103,35,0,0"/>
    </Grid>
</Page>
